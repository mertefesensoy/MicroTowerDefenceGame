# Fastlane configuration for MicroTowerDefenceGame
# Path A: TestFlight deployment

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Ensure we're using the latest match profiles
    match(
      type: "appstore",
      readonly: true,
      app_identifier: "com.mertefesensoy.MicroTowerDefenceGame"
    )

    # Increment build number (optional, can be managed manually)
    increment_build_number(
      xcodeproj: "MicroTowerDefenceGame.xcodeproj"
    )

    # Build the app
    build_app(
      scheme: "MicroTowerDefenceGame",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.mertefesensoy.MicroTowerDefenceGame" => "match AppStore com.mertefesensoy.MicroTowerDefenceGame"
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      distribute_external: false
    )
  end

  desc "Bootstrap signing (run once)"
  lane :setup_signing do
    match(
      type: "appstore",
      readonly: false,
      app_identifier: "com.mertefesensoy.MicroTowerDefenceGame"
    )
  end

  desc "Verify environment variables"
  lane :verify_env do
    UI.message("MATCH_GIT_URL: #{ENV['MATCH_GIT_URL']}")
    UI.message("DEVELOPER_PORTAL_TEAM_ID: #{ENV['DEVELOPER_PORTAL_TEAM_ID']}")
    UI.message("APP_STORE_CONNECT_TEAM_ID: #{ENV['APP_STORE_CONNECT_TEAM_ID']}")
    UI.message("FASTLANE_TEAM_ID: #{ENV['FASTLANE_TEAM_ID']}")
  end
end
