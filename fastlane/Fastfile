default_platform(:ios)

APP_ID = "com.mertefesensoy.MicroTowerDefenceGame"

platform :ios do
  desc "One-time signing bootstrap (creates certs/profiles and pushes to match repo)"
  lane :bootstrap_signing do
    setup_ci if ENV["CI"]

    match(
      type: "appstore",
      app_identifier: APP_ID,
      team_id: ENV["DEVELOPER_PORTAL_TEAM_ID"],
      git_url: ENV["MATCH_GIT_URL"],
      readonly: false
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    setup_ci if ENV["CI"]

    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_P8_B64"],
      is_key_content_base64: true
    )

    match(
      type: "appstore",
      app_identifier: APP_ID,
      team_id: ENV["DEVELOPER_PORTAL_TEAM_ID"],
      git_url: ENV["MATCH_GIT_URL"],
      readonly: true
    )

    build_app(
      scheme: "MicroTowerDefenceGame",
      project: "MicroTowerDefenceGame.xcodeproj",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
